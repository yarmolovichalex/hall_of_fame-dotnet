@using HallOfFame_dotnet.Models
@model Album
@{
    ViewBag.Title = "Add album";
}

@if (Model == null)
{
    <div class="container">
        @using (Html.BeginForm("Create", "Album", FormMethod.Post, new { role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(a => a.Artist)
                @Html.TextBoxFor(a => a.Artist, new { Name = "artistInput", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Name)
                @Html.TextBoxFor(a => a.Name, new { Name = "albumNameInput", @class = "form-control" })
            </div>

            <button type="submit" value="Create album" class="btn btn-primary">Create album</button>
        }
    </div>
}
else
{
    <p>Check album information:</p>
    <div class="container">
        @using (Html.BeginForm("Add", "Album", FormMethod.Post, new { role = "form" }))
        {
            @Html.EditorForModel()
            
            <button type="submit" value="Create album" class="btn btn-primary">Add album</button>
        }
    </div>
}

