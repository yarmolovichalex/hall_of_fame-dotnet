@model HallOfFame_dotnet.Models.Album

<div class="form-group">
    @Html.LabelFor(a => a.Artist, new { @class = "control-label col-sm-4" })
    <div class="col-sm-4">
        @Html.TextBoxFor(a => a.Artist, new { @class = "form-control" })
    </div>
    <div class="col-sm-offset-4"></div>
</div>

<div class="form-group">
    @Html.LabelFor(a => a.Name, new { @class = "control-label col-sm-4" })
    <div class="col-sm-4">
        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
    </div>
    <div class="col-sm-offset-4"></div>
</div>

<div id="LastfmInfo" class="js-hidden">
    <div class="form-group">
        @Html.LabelFor(a => a.Year, new { @class = "control-label col-sm-4" })
        <div class="col-sm-4">
            @Html.TextBoxFor(a => a.Year, new { @class = "form-control" })
        </div>
        <div class="col-sm-offset-4"></div>
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Description, new { @class = "control-label col-sm-4" })
        <div class="col-sm-4">
            @Html.TextAreaFor(a => a.Description, 15, 55, new { @class = "form-control" })
        </div>
        <div class="col-sm-offset-4"></div>
    </div>

    <div class="form-group" id="Tracklist">
        @Html.LabelFor(a => a.Tracklist)
        <table id="TracklistTable">
            <tr>
                <th class="col-sm-1">
                    <label>Number</label>
                </th>
                <th class="col-sm-10">
                    <label>Name</label>
                </th>
                <th class="col-sm-1 text-center">
                    <label>Duration</label>
                </th>
            </tr>
        </table>
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Image)
        @Html.TextBoxFor(a => a.Image, new { @class = "form-control" })
        <img id="LastfmImage" class="img-responsive" src="@Model.Image" />
    </div>
</div>
