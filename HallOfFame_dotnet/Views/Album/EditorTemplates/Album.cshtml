@model HallOfFame_dotnet.Models.Album

<div class="editor-label">
    @Html.LabelFor(a => a.Artist)
</div>
<div class="editor-field">
    @Html.EditorFor(a => a.Artist)
</div>

<div class="editor-label">
    @Html.LabelFor(a => a.Name)
</div>
<div class="editor-field">
    @Html.TextBoxFor(a => a.Name)
</div>

<div class="editor-label">
    @Html.LabelFor(a => a.Year)
</div>
<div class="editor-field">
    @Html.EditorFor(a => a.Year)
</div>

<div class="editor-label">
    @Html.LabelFor(a => a.Description)
</div>
<div class="editor-field">
    @Html.TextAreaFor(a => a.Description, 15, 55, null)
</div>

<div class="editor-label">
    @Html.LabelFor(a => a.Tracklist)
</div>
<div id="tracklist">
    <table>
        <tr>
            <th>
                <label>Number</label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Duration</label>
            </th>
        </tr>
        @Html.EditorFor(a => a.Tracklist)
    </table>
</div>

<div class="editor-label">
    @Html.LabelFor(a => a.Image)
</div>
<div class="editor-field">
    @Html.EditorFor(a => a.Image)
</div>

<img src="@Model.Image" />