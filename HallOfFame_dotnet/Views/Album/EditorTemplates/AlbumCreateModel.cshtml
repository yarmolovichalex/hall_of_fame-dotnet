@model HallOfFame_dotnet.Models.AlbumCreateModel
           
<div class="form-group @(Html.ViewData.ModelState.IsValidField("artist") ? null : "has-error")">
    @Html.LabelFor(a => a.Artist)
    @Html.TextBoxFor(a => a.Artist, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Artist)
</div>

<div class="form-group @(Html.ViewData.ModelState.IsValidField("name") ? null : "has-error")">
    @Html.LabelFor(a => a.Name)
    @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Name)
</div>
